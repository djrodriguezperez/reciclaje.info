<MudDialog>
    <DialogContent>
        <MudText>@Contenido</MudText>
    </DialogContent>
    <DialogActions>        
        <MudButton Color="@Color" Variant="Variant.Filled" OnClick="Submit">@TextoBoton</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance? MudDialog { get; set; }

    [Parameter] public string? Contenido { get; set; }

    [Parameter] public string? TextoBoton { get; set; }

    [Parameter] public Color Color { get; set; }

    void Submit() => MudDialog?.Close(DialogResult.Ok(true));

}