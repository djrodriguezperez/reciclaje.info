@inherits LayoutComponentBase

<MudThemeProvider Theme="AppTheme"/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    @*Menú Superior*@
    <MudAppBar Elevation="1">
            <MudAvatar Color="Color.Primary" Size="Size.Medium" Image="content/img/Icon-Reciclaje-Info.svg" />
            <MudText  Typo="Typo.h6" Class="pl-3">Reciclaje.info</MudText>
        
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Notifications" Color="Color.Dark" Edge="Edge.End" />
       <MudIconButton Icon="@Icons.Material.Filled.MyLocation" Color="Color.Secondary" Edge="Edge.End" />
       <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.End" OnClick="@((e) => DrawerLeftToggle())" />
      
        @*<MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" OnClick="@(() => DrawerRightToogle(Anchor.End))"/>*@
      
    </MudAppBar>

    @*Menú Flotante Izquierdo*@
    <MudDrawer @bind-Open="@_drawerLeft" Anchor="Anchor.End" Elevation="0" ClipMode="DrawerClipMode.Always"  >
        <MudDrawerHeader >
            
            <MudText  Typo="Typo.h6">Menú</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>

      @* Menú Flotante Derecho*@
        <MudDrawer @bind-Open="@_drawerRight" Anchor="@anchor" Elevation="1" Variant="@DrawerVariant.Temporary">
            <MudDrawerHeader>
                <MudText Typo="Typo.h6">Configuración</MudText>
            </MudDrawerHeader>
            <MudNavMenu>
                <MudNavLink Match="NavLinkMatch.All">Open Data</MudNavLink>
                <MudNavLink Match="NavLinkMatch.All">MudBlazor Components</MudNavLink>
                <MudNavLink Match="NavLinkMatch.All">Open Streep Maps</MudNavLink>
            </MudNavMenu>
        </MudDrawer>
      @* Cuerpo*@
        <MudMainContent>
            <MudContainer MaxWidth="MaxWidth.Large" Class="pt-5">
                @Body
            </MudContainer>
        </MudMainContent>
</MudLayout>

@code {    
    
    bool _drawerRight ;
    bool _drawerLeft;
    Anchor anchor;

    MudTheme AppTheme = new MudTheme()
    {
        Palette = new Palette()
        {
            Primary = Colors.Green.Darken3,
            Secondary = Colors.Yellow.Darken3,
            AppbarBackground = "#e3d2a7",
            TextPrimary = Colors.Green.Darken3,
            AppbarText = Colors.Green.Darken3
        },
        LayoutProperties = new LayoutProperties()
        {
            DrawerWidthLeft = "300px",
            DrawerWidthRight = "300px"          
            
        }
    };




    void DrawerLeftToggle()
    {
        _drawerLeft = !_drawerLeft;
    }   
    void DrawerRightToogle(Anchor anchor)
    {
        _drawerRight = true;
        this.anchor = anchor;
    }


}





